notes for fragment
to remove extra html or unwanted html tags

users.js
import React, { useEffect, useState, Fragment } from 'react';

function Users() {
    const [ user, setUser ] = useState([
    { name: "anil", age: "26" },
    { name: "sam", age: "20" },
    { name: "bruce", age: "29" },
    { name: "kelly", age: "91" },
    { name: "peter", age: "40" }
    ]);


    return(
        <Fragment>
            <h1>user listing is here</h1>
            {
                user.length === 6 ? <div>yes, it is right</div> : <div>no, it is not right</div>
            }
        </Fragment>
    );
}

export default Users; 

