about.js

import React from 'react';

class About extends React.Component{

    constructor(){
        super();
        this.state={
            name: 'max',
            age: '28',
        }
        
    }

    componentDidMount(){
console.warn("did mount");
    }

    componentDidUpdate(){
        // console.warn("did update");
        alert("name is updated");
    }

    render(){
        return(
            <div>
                <h2>about us class component</h2>
                <h2>{this.state.name}</h2>
                <h2>{this.state.age}</h2>
                <button onClick={() => {this.setState({name: "maximillian"})}}>Update Name</button>
            </div>
        );
    }
}

export default About;


// constructor(){

// }

// componentDidMount(){

// }



// componentDidUpdate(){

// }

// componentWillUnmount(){

// }


