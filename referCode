contact.js

import React, { useEffect } from 'react';

function Contact(props) {

    

    // hooks 
    useEffect( () => {
        // console.warn("hello from hooks");
        console.warn("check props",props.name)
    },[])
    // useEffect( () => {
    //     // console.warn("hello from hooks");
    //     console.warn("check props",props)
    // })

    // useEffect( () => {
    //     // console.warn("hello from hooks");
    //     console.warn("check props 2 for update",props)
    // },[])

    useEffect( () => {
        // console.warn("hello from hooks");
        console.warn("check props 2 for update",props.name)
    }, [ props.name ])


    let data = "contact us"
    return(
        <div>
            <h3>{data} functional component</h3>
            <h2>{ props.name }</h2>
            
        </div>
    );
}

export default Contact;

