contact.js

import React, { useState } from 'react';

function Contact(props) {

    return(
        <div>
            <h3>contact us component</h3>
            <button onClick={() => {console.warn("hello on click")}}>Click me</button> // arrow functions are used to bind the data and if we did not put arrow function then onClick does not wait for the click  
            
        </div>
    );
}


or

import React from 'react';

function Contact(props) {
const test = () => {
    console.warn("test function");
}
    return(
        <div>
            <h3>contact us component</h3>
            {/* <button onClick={() => {console.warn("hello on click")}}>Click me</button> */}
            {/* this will call test function automatically without waiting for the click */}
            <button onClick={test()}>Click me</button>
            {/* this will call test function only when button is clicked */}
            <button onClick={test}>Click Me</button>

            
        </div>
    );
}

export default Contact;

or

import React from 'react';

function Contact(props) {
const test = (e) => {
    console.warn("test function",e); // for getting whole event
    console.warn("test function",e.target); // for getting the event target on particular field
    console.warn("test function",e.target.value); // for getting the value 
}
    return(
        <div>
            <h3>contact us component</h3>
            <input type="text" onChange={test}></input>
            <button onClick={test}>Click Me</button>

            
        </div>
    );
}

export default Contact;


or

import React, { useState } from 'react';

function Contact(props) {
    const [ val, setVal ] = useState("anil");
const test = (e) => {
    console.warn("test function",e.target.value);
    setVal(e.target.value);
}
    return(
        <div>
            <h3>contact us component</h3>
            <input type="text" value={val} onChange={test}></input>
            {/* <button onClick={test}>Click Me</button> */}
            <button onClick={() => alert(val)}>Click Me</button>

            
        </div>
    );
}

export default Contact;


listing notes

users.js

import React, { useEffect, useState } from 'react';

function Users() {
    // const [ user, setUser ] = useState([
    // { name: "anil", age: "26" },
    // { name: "sam", age: "20" },
    // { name: "bruce", age: "29" },
    // { name: "kelly", age: "91" },
    // { name: "peter", age: "40" }
    // ]);

    // const [ user ] = useState([
    //     { name: "anil", age: "26" },
    //     { name: "sam", age: "20" },
    //     { name: "bruce", age: "29" },
    //     { name: "kelly", age: "91" },
    //     { name: "peter", age: "40" }
    //     ]);

    const user= [
        { name: "anil", age: "26" },
        { name: "sam", age: "20" },
        { name: "bruce", age: "29" },
        { name: "kelly", age: "91" },
        { name: "peter", age: "40" }
        ];

    return(
        <div>
            <h1>user listing is here</h1>
            {
                // eslint-disable-next-line array-callback-return
                user.map((item, i) => 
                // eslint-disable-next-line no-unreachable
                <div key={i}>{item.name}</div>
             )
            }
        </div>
    );
}

export default Users;

