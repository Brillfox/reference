notes for hooks and state

contact.js

import React, { useEffect, useState } from 'react';

function Contact() {

    // states
    const [ name, setName ] = useState("max");
    const [ age, setAge ] = useState('27');

    // hooks and it will call every time when button is clicked
    useEffect( () => {
        console.warn("hello from hooks");
    })

    // hooks and it will call when age button is clicked
    useEffect( () => {
        console.warn("hello from hooks");
    }, [age])

    // hooks and it will call when name button is clicked
    useEffect( () => {
        console.warn("hello from hooks");
    }, [name])

    // hooks and it will call one time which ever button is clicked
    useEffect( () => {
        console.warn("hello from hooks");
    }, [])

    let data = "contact us"
    return(
        <div>
            <h3>{data} functional component</h3>
            <h3>Name: { name }</h3>
            <h3>Age: { age }</h3>
            <button onClick={() => setName('maximillian')}>Update name</button>
            <button onClick={() => setAge('60')}>Update age</button>
        </div>
    );
}

export default Contact;


