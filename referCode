message.js

import React, { useState } from 'react';

function Message() {
    const [ text, setText ] = useState('welcome visitors');
    return(
        <div>
            <h1>Message: { text }</h1>
            <button onClick={() => setText("thanks for subscribing")}>Subscribe</button>
        </div>
    );
}

export default Message;


