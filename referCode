notes for conditions 

users.js

import React, { useEffect, useState } from 'react';

function Users() {
    const [ user, setUser ] = useState([
    { name: "anil", age: "26" },
    { name: "sam", age: "20" },
    { name: "bruce", age: "29" },
    { name: "kelly", age: "91" },
    { name: "peter", age: "40" }
    ]);


    return(
        <div>
            <h1>user listing is here</h1>
            {
                user.length === 6 ? <div>yes, it is right</div> : <div>no, it is not right</div>
            }
        </div>
    );
}

export default Users;

app.js

